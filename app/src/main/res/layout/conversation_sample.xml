<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:id="@+id/other_ll_conver_sample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            app:civ_border_color="#000"
            app:civ_border_width="1dp"
            android:id="@+id/civ_other_conver_sample"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:src="@drawable/social" />


        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#c4c1c1"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_otherabout_conver_sample"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                tools:text="Min Ko Ko LinnMin Ko Ko LinnMin Ko Ko LinnMin Ko Ko LinnMin Ko Ko LinnMin Ko Ko LinnMin Ko Ko LinnMin Ko Ko LinnMin Ko Ko LinnMin Ko Ko LinnMin Ko Ko Linn" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:id="@+id/my_ll_conver_sample"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#c4c1c1"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/tv_myabout_conver_sample"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                tools:text="Min Ko Ko LinnMin Ko Ko LinnMin Ko Ko LinnMin Ko Ko LinnMin Ko Ko LinnMin Ko Ko LinnMin Ko Ko LinnMin Ko Ko LinnMin Ko Ko LinnMin Ko Ko LinnMin Ko Ko Linn" />
        </LinearLayout>
        <de.hdodenhof.circleimageview.CircleImageView
            app:civ_border_color="#000"
            app:civ_border_width="1dp"
            android:id="@+id/civ_my_conver_sample"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:src="@drawable/social" />

    </LinearLayout>
</RelativeLayout>